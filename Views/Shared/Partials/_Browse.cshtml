@using Lifeplanner

<section class="browse-page-section">
    <div class="browse-wrapper">
        <div class="browse-header">
            <h2>Explore Culinary Delights</h2>
            <p>Ready for some inspiration? Dive into a world of delicious, messy, and slightly chaotic recipes.</p>
        </div>

        @{
            var recipes = new List<Recipe>
            {
                new Recipe 
                { 
                    Title = "The Great Spaghetti & Meatball Incident", 
                    Description = "A classic tale of triumph, saucy spills, and questionable life choices.", 
                    ImageUrl = "https://images.pexels.com/photos/17210211/pexels-photo-17210211/free-photo-of-mat-spaghetti-tomatsas-middag.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
                },
                new Recipe 
                { 
                    Title = "Lemonade with a Twist (of Regret)", 
                    Description = "Sweet, sour, and a secret ingredient that's best left unsaid.", 
                    ImageUrl = "https://images.pexels.com/photos/1335010/pexels-photo-1335010.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
                },
                new Recipe 
                { 
                    Title = "My First Pizza... and Last", 
                    Description = "A harrowing tale of cheese, dough, and a little too much ambition.", 
                    ImageUrl = "https://images.pexels.com/photos/825661/pexels-photo-825661.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
                },
                new Recipe 
                { 
                    Title = "'It's Just Chicken' (It's Not)", 
                    Description = "Simple chicken dinner with a complexity that will make you question your existence.", 
                    ImageUrl = "https://images.pexels.com/photos/10696985/pexels-photo-10696985.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
                },
                new Recipe 
                { 
                    Title = "The Burger That Broke the Bun", 
                    Description = "A monumental, messy, and glorious burger that no bun could contain.", 
                    ImageUrl = "https://images.pexels.com/photos/4037135/pexels-photo-4037135.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
                },
                new Recipe 
                { 
                    Title = "That One Time We Tried to Bake Bread", 
                    Description = "A dense, brick-like loaf that could double as a doorstop.", 
                    ImageUrl = "https://images.pexels.com/photos/1028711/pexels-photo-1028711.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
                },
                new Recipe 
                { 
                    Title = "'Green' Smoothie, 'Brown' Outcome", 
                    Description = "The perfect healthy start to your day... if you close your eyes while drinking it.", 
                    ImageUrl = "https://images.pexels.com/photos/1092730/pexels-photo-1092730.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
                }
            };
        }

        <div class="recipe-grid">
            @foreach(var recipe in recipes) // Changed from allRecipes to recipes
            {
                <a href="#" class="recipe-card">
                    <img src="@recipe.ImageUrl" alt="@recipe.Title">
                    <div class="card-content">
                        <h4>@recipe.Title</h4>
                        <p>@recipe.Description</p>
                    </div>
                </a>
            }
        </div>
    </div>
</section>